<% if user.has_picture? %>
	<a href="<%= url_for user %>"><img src="/pictures/<%= current_government.short_name %>/icon_48/<%= user.picture_id %>" border="0" /></a>
<% elsif Facebooker.api_key and user.has_facebook? %>
	<a href="<%= url_for user %>"><fb:profile-pic uid="<%= user.facebook_uid %>" size="small" width="48px" border="0" linked="false" /></fb:profile-pic></a>
<% else %>
	<img src="<%= current_government.buddy_icon_48_url %>" border="0" width="48" height="48" />
<% end %>