<div id="hp_intro"><%= @page_title %></div>

<% if @user.has_picture? %>
	<p>
	<img src="/pictures/get_450/<%= @user.picture_id %>">
<% end %>

<% form_for(:user, :url => {:action => "picture_save" }, :html => {:multipart => true}) do |f| %>
<%= f.error_messages %>

<% fields_for :picture, @user.picture do |p| %>
  <p><label for="picture"><%= t('settings.picture.upload')%></label>
	<p>
  <%= p.file_field :picture %><br/>
	<span class="small"><%= t('pictures.must') %></span>
<% end %>

<p><%= submit_tag t('pictures.submit'), :class => "yellow_button" %></p>
<% end %>

