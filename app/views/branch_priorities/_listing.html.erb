<div class="priority_name" id="priority_<%= priority.id %>_name">
	<%= link_to_unless_current h(priority.name), priority, :class => "priority_name_link" %>
</div>

	<%= render :partial => "priorities/tag_show", :locals => { :priority => priority }%>
	
	<% if not ['inactive','buried'].include?(priority.status) %>
		<div class="priority_actions">
			<%= render :partial => "button_small", :locals => {:priority => priority, :endorsement => endorsement, :region => "branch_inline", :branch_endorsement => branch_endorsement} %>
			<%= render :partial => "endorsement_count", :locals => {:priority => priority, :branch_endorsement => branch_endorsement }%>
		</div>
	<% end %>	
	
<% if priority.status == 'inactive' %>
	<div class="priority_status">
		<% if priority.replaced? %>
			<%= t('priorities.replaced',:priority_name => link_to(priority.change.new_priority.name, priority.change.new_priority)) %>
		<% end %>
	</div>
<% end %>