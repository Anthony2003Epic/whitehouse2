<div id="login">
	
	<%= t('sessions.new.intro', :signup_url => signup_url)%>
	
	<div id="login_form">
	<div id="login_message"></div>

	<% form_remote_for :session, :url => session_path do |f| -%>
		<table border="0" cellspacing="0" cellpadding="0">
			<tr><td><%= t('sessions.new.email.label')%></td><td style="padding-left: 5px;"><%= t('sessions.new.password.label')%></td><td></td></tr>
			<tr><td valign="top">
				<input "text" name="email" size="15" id="login_email">
			</td><td valign="top" style="padding-left: 5px;">
				<input type="password" name="password" size="8" id="login_password">
			</td>
			<td valign="top" style="padding-left: 2px;">
				<input type="submit" value="Log in">
			</td>
			</tr>
		</table>
		<%= link_to t('sessions.new.forgot'), new_password_path %>	
	<% end -%>
	</div>
	<% if Facebooker.api_key and current_government.is_facebook? %>
		<p>
		<%= fb_login_and_redirect url_for, :size => :medium, :background => :white, :length => :long %>
	<% end %>
	
</div>