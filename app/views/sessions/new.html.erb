<table border="0" cellspacing="0" cellpadding="0">
	<tr>
		<td valign="top">
			<h2>Login using <%= current_government.name %> account</h2>
			<%= render :partial => "sessions/form" %>
			<p><%= link_to t('sessions.new.forgot'), new_password_path %>
			<p>
			<%= link_to t('sessions.signup.name', :government_name => current_government.name), new_user_path %>
			<p>
		</td>
		
		<% if current_government.has_facebook_enabled? or current_government.has_twitter_enabled? %>
		<td valign="top" style="padding-left: 20px;">
			<% if current_government.has_facebook_enabled? %>
			<h2>Login using Facebook account</h2>
			<p>
			<%= fb_login_and_redirect "/", :size => :medium, :background => :white, :length => :long %>
			<% end %>
			<% if current_government.has_twitter_enabled? %>
			<h2>Login using Twitter account</h2>
			<p>
			<%= link_to image_tag("twitter_signin.png", :border => 0), :controller => "twitter", :action => "create" %>				
			<% end %>
		</td>
		<% end %>
		
		
	</tr>
</table>